###################
## System Tool(s) ##
###################
alias src='. $HOME/.bashrc'
alias ssh='ssh -X'
# Launch Gnome.
if command -v gdm >/dev/null; then
	alias gnome='sudo systemctl start gdm'
fi
alias grep="grep --color=auto"
alias ip="ip --color=auto"
alias ls="ls --color=auto"

########################
## Development Tool(s) ##
########################
## Markdown Tool ##
alias remarkable=$GIT_ROOT/public/Remarkable/run.sh

## TMUX ##
if command -v tmux >/dev/null; then
	# Session Creation #
	alias tmuxCreateSession="tmux new-session -d -s tmp -n home -c $HOME"
	# Rename Temporary Session #
	alias tmuxRenameSessionDefault="tmux send-keys -t tmp:home 'tmux rename-session default' Enter 'clear;neofetch;pwd;ls -GAp' Enter;sleep .3"
	alias tmuxRenameSessionCode="   tmux send-keys -t tmp:home 'tmux rename-session code'    Enter 'clear;neofetch;pwd;ls -GAp' Enter;sleep .3"
	# Create Window(s) #
	alias tmuxCreateWindowHome2="tmux new-window -d -n home2 -c $HOME -t tmp;tmux send-keys -t tmp:home2 'c' Enter"
	alias tmuxCreateWindowGit="  tmux new-window -d -n git -c $GIT_ROOT -t tmp;tmux send-keys -t tmp:git 'c' Enter"
	alias tmuxCreateWindowGit2=" tmux new-window -d -n git2 -c $GIT_ROOT -t tmp;tmux send-keys -t tmp:git2 'c' Enter"
	alias tmuxCreateWindowShellBaseWorking="\
		tmux new-window -d -n shell_base_working -c $GIT_ROOT/shell_base -t tmp;\
		tmux send-keys -t tmp:shell_base_working 'tmux split-window -v -t tmp:shell_base_working -l 10' Enter 'g' Enter;\
		sleep .3;\
		tmux send-keys -t tmp:shell_base_working 'tmux select-pane -t 1.0;clear' Enter\
	"
	alias tmuxCreateWindowShellBaseDir="\
		tmux new-window -d -n shell_base_dir -c $GIT_ROOT/shell_base -t tmp;\
		tmux send-keys -t tmp:shell_base_dir 'g' Enter\
	"
	alias tmuxCreateWindowWeb="\
		tmux new-window -d -n web -c $HOME -t tmp;\
		tmux send-keys -t tmp:web 'lynx' Enter;\
		tmux send-keys -t tmp:web 'g';\
		tmux send-keys -t tmp:web '.ggoogle.com' Enter\
	"
	# Attach to Default Session #
	alias t="\
		tmuxCreateSession;\
		tmuxCreateWindowHome2;\
		tmuxCreateWindowGit;\
		tmuxCreateWindowWeb;\
		tmuxRenameSessionDefault;\
		tmux attach -t default:home\
	"
	# Attach to Code Session #
	alias tCode="\
		tmuxCreateSession;\
		tmuxCreateWindowGit;\
		tmuxCreateWindowGit2;\
		tmuxCreateWindowWeb;\
		tmuxRenameSessionCode;\
		tmux attach -t code:home\
	"
	alias tShellBase="\
		tmuxCreateSession;\
		tmuxCreateWindowShellBaseWorking;\
		tmuxCreateWindowShellBaseDir;\
		tmuxCreateWindowWeb;\
		tmuxRenameSessionCode;\
		tmux attach -t code:shell_base_working\
	"
fi

###################
## Combination(s) ##
###################
## Environment Config ##
# Clear, show current, location, and location's content(s).
alias c='clear;pwd;ls -GAp'
# Same as 'c' pluse git status and branch.
alias g='c;git status;git branch -a'
# Git fetch.
alias gF='git fetch --all -ftp'
